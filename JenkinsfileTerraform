pipeline {
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  environment {
    DOCKERHUB_CREDENTIALS = credentials('sajjad-dockerhub')
    DOCKER_REGISTRY = 'docker.io'
    GIT_CMT_SHORT = "${GIT_COMMIT.take(7)}"
  }
  stages {
    stage('init') {
      steps {
        sh 'terraform init'
      }
    }
    stage('change directory') {
      steps {
        sh 'cd terraform'
      }
    }
    stage('apply') {
      steps {
        sh 'terraform apply --auto-approve'
      }
    }
    stage('destry') {
      steps {
        echo 'destroy'
      }
    }     
  }  
}